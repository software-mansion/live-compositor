{
  "name": "@swmansion/smelter-browser-render",
  "version": "0.2.0-rc.0",
  "author": "Software Mansion <contact@swmansion.com>",
  "license": "SEE LICENSE IN ./LICENSE",
  "description": "Smelter rendering engine compiled to WASM",
  "bugs": {
