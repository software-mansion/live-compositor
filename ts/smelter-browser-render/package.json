  },
  "homepage": "https://github.com/software-mansion/smelter",
  "files": [
    "/dist",
    "/LICENSE"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
