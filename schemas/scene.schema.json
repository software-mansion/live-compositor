          "properties": {
            "function_name": {
              "type": "string",
              "enum": [
                "cubic_bezier"
              ]
            },
            "points": {
              "type": "array",
              "items": {
                "type": "number",
                "format": "double"
              },
              "maxItems": 4,
              "minItems": 4
            }
